<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title><%= title %></title>
        <link rel="stylesheet" href="css/site.css">
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">
        
    </head>
    <body class="dark-theme">
        <%- include('partials/header') %>

        <div class="container card" id="registration-form">
            <h1 class="card-title">Client Registration</h1>
            <div class="card-content">
                <div class="form">
                    <form action="/registration" method="post">
                        <div class="form-field">
                            <label for="clientName">Name: </label>
                            <input class="input" type="text" name="clientName" id="clientName" required>
                        </div>

                        <div class="form-field">
                            <label for="clientEmail">Email: </label>
                            <input class="input" type="email" name="clientEmail" id="clientEmail" required>
                        </div>

                        <div class="form-field">
                            <input type="submit" value="Register" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>
    </body>
</html>